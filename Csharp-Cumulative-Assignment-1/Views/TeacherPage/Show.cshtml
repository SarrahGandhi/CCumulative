@model Csharp_Cumulative_Assignment_1.Models.Teacher

<style>
    /* Basic styling for teacher details */
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 1200px;
        margin: 50px auto;
        padding: 20px;
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h1 {
        text-align: center;
        color: #333;
        margin-bottom: 30px;
    }

    p {
        font-size: 18px;
        color: #555;
        line-height: 1.5;
        margin: 10px 0;
    }

    .teacher-details {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        font-size: 18px;
    }

    .teacher-details .label {
        font-weight: bold;
        color: #333;
        margin-right: 10px;
    }

    .teacher-details .value {
        color: #555;
    }

    .back-button {
        display: inline-block;
        padding: 10px 20px;
        margin-top: 20px;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 4px;
    }

    .back-button:hover {
        background-color: #0056b3;
    }
</style>

<div class="container">
    @if (Model == null)
    {
        <div class="error-message">
            <p>Teacher not found.</p>
        </div>
    }
    else
    {
        <h1>@Model.TeacherFName @Model.TeacherLName</h1>

        <div class="teacher-details">
            <p><span class="label">Employee Number:</span><span class="value">@Model.EmployeeNumber</span></p>
            <p><span class="label">Hire Date:</span><span class="value">@Model.TeacherHireDate.ToString("yyyy-MM-dd")</span>
            </p>
            <p><span class="label">Salary:</span><span class="value">@Model.TeacherSalary.ToString("C")</span></p>
        </div>

        <a href="/TeacherPage/List" class="back-button">Back to Teacher List</a>
    }
</div>
