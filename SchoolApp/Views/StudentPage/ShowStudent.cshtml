@model SchoolApp.Models.Student

<div class="student-details-container">

    <!-- Displaying the details of the selected student -->
    @if (Model != null)
    {
        <h1 class="student-name">@Model.StudentFName @Model.StudentLName</h1>
        <p class="student-detail">Student Number : <span>@Model.StudentId.ToString()</span></p>
        <p class="student-detail">Enrolment Date : <span>@Model.EnrolDate.ToString("yyyy-M-d")</span></p>
    }
    else
    {
        <div class="error-message">
            <p>Student not Found</p>
        </div>
    }


    <a href="/StudentPage/ListStudent" class="back-button">Back to Student List</a>
</div>

<style>
    /* Basic styling for teacher details */
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 1200px;
        margin: 50px auto;
        padding: 20px;
        background-color: white;
        using Mysqlx;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h1 {
        text-align: center;
        color: #333;
        margin-bottom: 30px;
    }

    p {
        font-size: 18px;
        color: #555;
        line-height: 1.5;
        margin: 10px 0;
    }

    .student-detail {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        font-size: 18px;
    }

    .student-detail .label {
        font-weight: bold;
        color: #333;
        margin-right: 10px;
    }

    .student-detail .value {
        color: #555;
    }

    .back-button {
        display: inline-block;
        padding: 10px 20px;
        margin-top: 20px;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 4px;
    }

    .back-button:hover {
        background-color: #0056b3;
    }
</style>