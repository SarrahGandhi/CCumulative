@{
    var course = ViewData["Course"] as SchoolApp.Models.Course;

}
<style>
    #containershow {
        max-width: 500px;
        margin: 50px auto;
        padding: 20px;
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
        font-family: Arial, sans-serif;
    }

    nav {
        margin-bottom: 20px;
    }

    .navlink {
        display: inline-block;
        text-decoration: none;
        background-color: #007bff;
        color: #fff;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 14px;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

    .navlink:hover {
        background-color: #0056b3;
    }

    h2 {
        color: #333;
        font-size: 1.5em;
        margin-bottom: 15px;
    }

    p {
        color: #555;
        margin-bottom: 20px;
        font-size: 14px;
    }

    form {
        display: flex;
        justify-content: center;
    }

    .btn-warning {
        background-color: #dc3545;
        color: #fff;
        border: none;
        padding: 10px 20px;
        font-size: 14px;
        font-weight: bold;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .btn-warning:hover {
        background-color: #c82333;
    }
</style>

<div id="containershow">
    <nav>
        <a class="navlink" href="/CoursePage/ShowCourse/@course.CourseId">Back to Course</a>
    </nav>
    <h2>Are you sure you want to delete @course.CourseCode?</h2>
    <p>This action cannot be undone.</p>
    <form method="POST" action="/CoursePage/DeleteCourse/@course.CourseId">
        <button class="btn-warning">
            Confirm Delete
        </button>
    </form>
</div>
